<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#161616"
    android:padding="24dp"
    android:elevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/references"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Vegetarienne,chÃ¨vre,champignons,fromage"
                android:textColor="#fdb501"
                android:textSize="24dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textColor="#6A90B5"
                android:fontFamily="@font/roboto_bold"
                android:layout_height="wrap_content"
                android:text="Total :" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total_commande"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#6A90B5"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_height="wrap_content"
                    android:text="15Fbu" />

            </RelativeLayout>

            <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/date_commande"
                   android:layout_height="match_parent"
                   android:layout_alignParentEnd="true"
                   android:textSize="7pt"
                   android:text="Le 07/06/2021"
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true" />

           </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

