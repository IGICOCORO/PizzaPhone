<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bi.gbstallman.pizzaphone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/ic_pizza"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pizza"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaPhone"
        tools:ignore="ExtraText"
        tools:targetApi="m">
        <activity android:name=".MainActivity"/>
        <activity android:name=".PizzalistActivity" />
        <activity android:name=".SplashScreen" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>